doctype html:5
html(lang="en")
    head
        title #{title}
        link(rel='stylesheet' href='/bower_components/bootstrap/dist/css/bootstrap.css')
        link(rel='stylesheet' href='/css/style.css')
    body
        nav.navbar.navbar-expand-md.navbar-dark.bg-dark
            .container-fluid
            a.navbar-brand(href='#') Articles
            button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarsExampleDefault' aria-controls='navbarsExampleDefault' aria-expanded='false' aria-label='Toggle navigation')
                span.navbar-toggler-icon
            #navbarsExampleDefault.collapse.navbar-collapse
                ul.navbar-nav.me-auto.mb-2.mb-md-0
                li.nav-item
                    a.nav-link(aria-current='page' href='/') Home
                if user
                    li.nav-item
                        a.nav-link(href='/add-article/') Add Article
                ul.nav.navbar-nav.navbar-right 
                    li
                        a(href='/users/register') Register
                    li
                        if user
                            a.nav-link(href='/users/logout') Logout
                        else
                            a.nav-link(href='/users/login') Login    
        if user
            a.nav-link(href='/add-article/') Add Article
        a.nav-link(href='/') Index
        
        if user
            a.nav-link(href='/users/logout') Logout
        else
            a.nav-link(href='/users/login') Login    

        .container
            != messages('messages', locals)
            if errors
                each error in errors.errors
                    div(class="alert alert-danger") #{error.msg}

            block content
            br
            hr
            footer
            script.
                const currentYear= new Date().getFullYear();   
                document.write("<p>Copyright &copy; ", currentYear +" </p>")
                
        script(src='/bower_components/jquery/dist/jquery.min.js')
        script(src='/bower_components/bootstrap/dist/js/bootstrap.js')