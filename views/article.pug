extends layout

block content
    h1= article.title
    h5 Authored by #{article.author}
    p= article.body
    hr
    if user
        if user.id == article.author
            a.btn.btn-primary(href='/article/edit/'+article._id) Edit
      
            a.btn.btn-danger.delete-article(href='#', data-id= article._id) Delete

            script(src='/js/main.js')